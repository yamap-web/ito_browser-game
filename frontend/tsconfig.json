{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs", 
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    // ReactにTypeScriptを使用
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    // 絶対パスの指定
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
    },
  },
  // コンパイル対象ファイル
  "include": ["src/**/*"]
}
